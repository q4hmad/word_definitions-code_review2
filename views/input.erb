<h2>Dictionary</h2>
<br>

<h3>Your words</h3>
<% @word_array.each do |item| %>
<h3><a href="/words/<%= item.id %>"><%= item.word %></a></h3>
<% end %>

<br>
<form action="/" method="post">
  <div class="form-group">
      <label for='word'>Enter the first word here:</label>
      <input name="word" class="form-control" type="text">
  </div>
  <div class="form-group">
      <label for='word_definition'>Enter your definition here:</label>
      <input name="word_definition" class="form-control" type="text">
  </div>

  <button type="submit" class="btn-success">Add the word!</button>
</form>
